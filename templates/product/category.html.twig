{% extends 'base.html.twig' %}

{% block title %}
    Catégory : {{ category.name }}
{% endblock %}

{% block body %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Acceuil</a></li>
        <li class="breadcrumb-item active">{{ category.name }}</li>
    </ol>

    <h1>Catégory : {{ category.name }}</h1>

    <div class="row">
    {% for product in category.products %}
        <div class="col-3">
            <div class="card">
                <img src="{{ product.mainPicture }}" class="img-fluid" alt="Image de produit">
                <div class="card-body">
                    <h4 class="card-title">{{ product.name }} ({{ product.price / 100 }} &euro;)</h4>
                    <span class="badge bg-primary">{{ product.category.name }}</span>
                    <p class="card-text">{{ product.shortDescription }}</p>
                    <a href="{{ path('product_show', {'category_slug': category.slug, 'slug': product.slug}) }}" class="btn btn-primary btn-sm">Détails</a>
                    <a href="#" class="btn btn-success btn-sm">Ajouter</a>
                </div>
            </div>
        </div>
    {% endfor %}
    </div>
{% endblock %}