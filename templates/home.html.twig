{% extends "base.html.twig" %}

{% block title %}
    Accueil
{% endblock %}

{% block body %}
    <h1>Ca marche !!<i class="fas fa-check"></i> </h1>
    <div class="row">
        {% for p in products %}
        <div class="col">
            <div class="card">
                <img src="{{ p.mainPicture }}" class="img-fluid" alt="Image de produit">
                <div class="card-body">
                    <h4 class="card-title">{{ p.name }} ({{ p.price / 100 }} &euro;)</h4>
                    <span class="badge bg-primary">{{ p.category.name }}</span>
                    <p class="card-text">{{ p.shortDescription }}</p>
                    <a href="{{ path('product_show', {'category_slug': p.category.slug, 'slug': p.slug}) }}" class="btn btn-primary btn-sm">Détails</a>
                    <a href="#" class="btn btn-success btn-sm">Ajouter</a>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
    <hr>
    <h2>Un service irreprochable</h2>
    <p>Loem opsum J'aurais aimé savoir comment intégrer des assets, plutôt que comment intégrer des assets, plutôt que</p>
    <div class="row">
        {% include "shared/_assurance.html.twig" with {
            'color': 'primary',
            'icon' : 'fas fa-truck',
            'text' : "Loem opsum J'aurais aimé savoir comment intégrer des assets, plutôt que comment intégrer des assets, plutôt que"
        } %}
        {% include "shared/_assurance.html.twig" with {
            'color': 'success',
            'icon' : 'fas fa-check',
            'text' : "Loem opsum J'aurais aimé savoir comment intégrer des assets, plutôt que comment intégrer des assets, plutôt que"
        } %}
        {% include "shared/_assurance.html.twig" with {
            'color': 'warning',
            'icon' : 'fas fa-lock',
            'text' : "Loem opsum J'aurais aimé savoir comment intégrer des assets, plutôt que comment intégrer des assets, plutôt que"
        } %}
    </div>
{% endblock %}